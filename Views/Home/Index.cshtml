

@{
    ViewBag.Title = "Home Page";
}

@*JQuery, joka suoritetaan aina, kun sivu latautuu*@
@section scripts{
    <script type="text/javascript">
        $(window).on('load', function () {
            if (@ViewBag.LoginError == 1) {
                $('#LoginRuutu').modal('show');
            }
        });
    </script>
}
<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">ETUSIVU</h1>
        <p class="lead">Tässä harjoitellaan ASP.NET MVC juttuja.</p>

        @*BootStrap/SVG -ikonit alla*@
        <p><a href="https://asp.net" class="btn btn-primary btn-md"><img src="~/Icons/star-fill.svg" alt="ASP.NET" width="32" height="32" title="ASP.NET" /> BUTTONIN KAUTTA ASP.NET SIVUSTOLLE &raquo;</a></p>
        <p><a href="https://asp.net"><img src="~/Icons/star-fill.svg" alt="ASP.NET" width="32" height="32" title="ASP.NET" /></a></p>

        @*FAS (Font Awesome) -ikonit*@
        <p><a href="https://asp.net" class="btn btn-primary btn-md"><span class="fa-solid fa-cube"> BUTTONIN KAUTTA ASP.NET SIVUSTOLLE &raquo;</span></a></p>
        <h1><a href="https://asp.net"><span class="fa-solid fa-cube" title="ASP.NET-sivut"></span></a></h1>
    </section>
@{ 
    Html.RenderPartial("_LoginModal");
}
    
  </main>
