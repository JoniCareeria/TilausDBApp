<div class="container-fluid">
    <div class="card-header">
        <a class="card-link">
            <form>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-warning font-weight-bold">Order</span>
                    </div>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="Toimitusosoite" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="Tilauspvm" disabled>
                    <input type="text" class="form-control bg-warning font-weight-bold px-2" value="Toimituspvm" disabled>
